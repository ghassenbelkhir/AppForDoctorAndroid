<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.oc.rss.appfordocter.MainActivity">
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#2A363B">
        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/avatar"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MedecinNomLabel"
                android:text="Nom Complet : "
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MedecinNom"
                android:text="Le nom de docteur "
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MedecinSpecialiteLabel"
                android:text=" Specialite : "
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MedecinSpecialite"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service :"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgence "
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma liste d'attente"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorAccent"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes messages"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorAccent"
                android:textColor="@color/white"/>




        </LinearLayout>
</ScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#2F9599">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tapez le numero de dossier medical :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        />


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/recherche"
           android:inputType="number"
        android:layout_marginLeft="40dp"


       />

        <Button
            android:id="@+id/Chercher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cherhcer"
            android:layout_marginLeft="180dp"/>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txterreu1"
            android:text="veuillez remplir ce champ "
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/darkred"
            android:layout_marginLeft="290dp"
            android:visibility="invisible"

           />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tapez un Nom pour chercher les patient :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            />


        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rechercheParNom"
            android:inputType="text"
            android:layout_marginLeft="10dp"

           />


        <Button
        android:id="@+id/ChercherParNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouvez  "
        android:layout_marginLeft="180dp"/>

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txterreu2"
            android:text="veuillez remplir ce champ "
            android:textStyle="italic"
            android:textSize="22sp"
            android:textColor="@color/darkred"
            android:layout_marginLeft="310dp"
            android:visibility="invisible"


            />
    </LinearLayout>
</FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_patient"
            android:background="@drawable/border"
            android:layout_margin="20dp">
            <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes Missions "
                android:id="@+id/LabelMission"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/darkblue"
                android:textSize="18sp"/>
            <CalendarView


                android:id="@+id/calendarView1"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            </LinearLayout>
        </ScrollView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

